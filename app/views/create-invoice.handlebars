<!--Page Header-->
<div class="page-header">

        <h4 class="page-title">New Sale</h4>

</div>

<!--Add New Product-->

<div class="page-content">

        <div class="row">
            <div class="col s12 m12 s12">

                <div class="card-panel">

                    <!-- FORM -->
                    <div class="row">
                        <form class="col s12 form-add-new" role="form">
                            <div class="row">
                                <div class="input-field col s6">
                                    <select id="employee" name="employee" class="browser-default">
                                        <option value="0" disabled>Select Employee:</option>
                                    </select>
                                </div>
                                <div class="input-field col s6">
                                    <select id="client" name="client" class="browser-default">
                                        <option value="0" disabled>Select Customer:</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s6">
                                    <input id="product_sku" name="product_sku" type="text" class="validate">
                                    <label for="product_sku">Product Search:</label>
                                </div>
                                <div class="input-field col s6">
                                    <a class="waves-effect waves-light btn" id="productSearch">SEARCH</a>
                                    <a class="waves-effect waves-light btn" id="productAdd">ADD</a>
                                </div>
                            </div>

                            <div class="row" id="lineItemsList">
                                <div class="input-field col s4">
                                    <label for="name" class="lineItemHeader">Product</label>
                                </div>
                                <div class="input-field col s2">
                                    <label for="price" class="lineItemHeader">Price</label>
                                </div>
                                <div class="input-field col s1">
                                    <label for="qty" class="lineItemHeader">QTY</label>
                                </div>
                                <div class="input-field col s2">
                                    <label for="discount" class="lineItemHeader">Discount</label>
                                </div>
                                <div class="input-field col s2">
                                    <label for="total" class="lineItemHeader">Total</label>
                                </div>
                                <div class="input-field col s1">
                                    <label for="discount" class="lineItemHeader">Remove</label>
                                </div>
                            </div>

                            <div class="row" id="bottomRow">
                                <div class="input-field col s6 right-align">
                                    <a class="btn">Reset</a>
                                    <a class="btn">Submit</a>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

</div>